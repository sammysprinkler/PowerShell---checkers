{
  "GitHubCredentials": {
    "Username": "${env:GITHUB_USERNAME}",
    "Email": "${env:GITHUB_EMAIL}",
    "Token": "${env:GITHUB_TOKEN}"
  },

  "SystemPaths": {
    "HostsFilePath": "${env:WINDIR}\\System32\\drivers\\etc\\hosts",
    "SAMFilePath": "${env:WINDIR}\\System32\\config\\SAM"
  },

  "Paths": {
    "LogDirectory": "${env:PROJECT_ROOT}\\Logs",
    "OutputDirectory": "${env:PROJECT_ROOT}\\Output",
    "BackupDirectory": "${env:PROJECT_ROOT}\\Backup",
    "DefaultDocumentsPath": "${env:USERPROFILE}\\Documents"
  },

  "MonitoredFiles": [
    "${env:WINDIR}\\System32\\drivers\\etc\\hosts",
    "${env:WINDIR}\\System32\\config\\SAM"
  ],

  "SuspiciousProcesses": [
    "nc",
    "netcat",
    "ncat",
    "meterpreter",
    "powershell",
    "cmd.exe",
    "taskmgr.exe",
    "regedit.exe"
  ],

  "SuspiciousPorts": [
    4444,
    1337,
    8080,
    9001,
    3389,
    22,
    23,
    21
  ],

  "MaxLogEntries": 100,

  "ErrorKeywords": [
    "failed password",
    "error",
    "unauthorized",
    "access denied",
    "login failure",
    "account locked"
  ],

  "FileChangeDetection": {
    "HashAlgorithm": "SHA256",
    "CheckIntervalMinutes": 60
  },

  "NetworkMonitoring": {
    "MaxConnectionsToCheck": 50,
    "SuspiciousIPAddresses": [
      "${env:PUBLIC_IP}",
      "${env:LAN_NETWORK}"
    ]
  },

  "SystemChecks": {
    "ProcessCheckIntervalMinutes": 10,
    "LogCheckIntervalMinutes": 30
  },

  "Logging": {
    "DefaultLogLevel": "INFO",
    "ConsoleOutput": true
  }
}
